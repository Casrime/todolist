{% extends 'base.html.twig' %}

{% block header_img %}{% endblock %}

{% block header_title %}<h1>{{ 'app.user.list'|trans }}</h1>{% endblock %}

{% block body %}
    {% if users|length == 0 %}
        <div class="alert alert-warning" role="alert">
            {{ 'app.user.list.empty'|trans }} <a href="{{ path('user_create') }}" class="btn btn-warning pull-right">{{ 'app.user.create'|trans }}</a>
        </div>
    {% else %}
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>{{ 'app.username'|trans }}</th>
                    <th>{{ 'app.email'|trans }}</th>
                    <th>{{ 'app.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('user_edit', {id: user.id}) }}" class="btn btn-success btn-sm">{{ 'app.edit'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
